{
  "name": "kennzeichen-raten",
  "private": true,
  "version": "1.4.0",
  "author": "Bran van der Meer <bran.van.der.meer@protonmail.com>",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "NODE_NO_WARNINGS=1 stmux -w always -n -M -- [ -s 1/3 \"vite\" .. [ \"vitest src\" : -s 1/3 \"tsc --noEmit --strict --watch\" ] ]",
    "build": "npm run lint && tsc --strict && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "deploy": "npm version minor -m \"chore: Release version %s\" && npm run build && gh-pages -d dist"
  },
  "dependencies": {
    "js-levenshtein": "^1.1.6",
    "json5": "^2.2.3",
    "ramda": "^0.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-assertions": "^7.22.5",
    "@types/js-levenshtein": "^1.1.1",
    "@types/ramda": "^0.29.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "gh-pages": "^6.1.0",
    "prettier": "^3.0.2",
    "stmux": "^1.8.7",
    "styled-components": "^6.1.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^0.34.2"
  },
  "prettier": {
    "printWidth": 60,
    "semi": false,
    "singleQuote": true
  }
}
